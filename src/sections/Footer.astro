---
import Instagram from "../components/Instagram.astro";
import Facebook from "../components/Facebook.astro";
---

<section class="w-full h-[70dvh] pt-10 flex md:flex-row flex-col bg-[#2D2D2D]">
    <div class="md:w-1/2 w-full flex flex-col gap-4 md:gap-0 justify-center items-center px-5">
        <img
            class="h-auto object-contain"
            src="/logo.webp"
            alt="Logo gym evolution"
        />

        <h2 class="text-[#FFFF] font-bold md:text-3xl text-base md:px-20 text-center">
            El éxito comienza con tu decisión, nosotros te ayudamos a alcanzarlo
        </h2>
    </div>

    <div class="md:w-1/2 w-full flex flex-col justify-around items-center h-full md:px-20 md:mt-0 mt-5">
        <h2
            class="flex justify-center items-center font-bold text-3xl w-full h-20 md:mb-0 mb-4 text-[#FFFF]"
        >
            Redes sociales
        </h2>

        <span class="flex gap-10 h-full w-full justify-center items-start">
            <a href="#"><Instagram /></a>
            <a href="#">
                <Facebook />
            </a>
        </span>
    </div>
</section>
